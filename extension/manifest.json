{
  "manifest_version" : 2,
  "name" : "PasswordNinja",
  "description" : "Allows you to securely use a single password for all websites.",
  "version" : "1.0.1",

  "permissions": [
    "tabs"
  ],
  "background" : {
    "scripts" : [
      "/lib/jquery.min.js",
      "/lib/require.js",
      "background.js"
    ]
  },
  "browser_action" : {
    "default_icon" : "popup/logo.png",
    "default_popup" : "popup/popup.html"
  },
  "content_scripts" : [{
    "matches" : ["*://*/*"],
    "js" : [
      "/lib/jquery.min.js",
      "/lib/require.js"
    ],
    "css" : [
    ],
    "all_frames" : true
  }]
}
